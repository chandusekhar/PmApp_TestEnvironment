
<script>
    function SaveTXNInventoryData() {

        Inventory_Data.Chassis_Type = $('#dd_Chassis_Type').val();
        Inventory_Data.Number_of_IF_Cables = $('#txt_Number_of_IF_Cables').val();
        Inventory_Data.UpdateSection = "TXN";

        ApiCallService.Ajax('@System.Configuration.ConfigurationManager.AppSettings["ApiPath"]', "api/InventoryManagement/SaveTelcoInventoryDetails", Inventory_Data, OnSuccessSaveTXNInventoryData, "POST", false)
    }

    function OnSuccessSaveTXNInventoryData(res) {

        if (res == "success") {
            alertify.alert('Success', 'Data has been updated successfully.')
           // GetInventoryData();
        }
        else {
            alertify.alert('Alert', 'Failed.')
        }
    }

</script>
<div class="tab-pane fade in" id="panel32" role="tabpanel">
    <div class="container tab_body tab-margin tab_inventory">
      
        <div class="row">
            <div class="col-md-3 col-sm-6 ">
                <div class="form-inline form-group mylabelstyle">
                    <label> Chassis Type</label>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 ">
                <div class="form-group">
                    <select class="form-control mydropdown" id="dd_Chassis_Type">
                        <option value="" disabled selected hidden>Select ..</option>
                        <option>CN</option>
                        <option>2P</option>
                        <option>6P</option>
                        <option>20P</option>
                    </select>
                </div>
            </div>
        </div>
      
        <div class="row">
            <div class="col-md-3 col-sm-6 ">
                <div class="form-inline form-group mylabelstyle">
                    <label> Number of IF Cables</label>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 ">
               <div class="form-group myinput">
                    <input id="txt_Number_of_IF_Cables" type="text" class="form-control ">
                </div>
            </div>
        </div>
               
        
        <button id="save_txn_inventory" name="save_txn_inventory" onclick="SaveTXNInventoryData()" class="btn btn-primary mybutton">Save</button>
    </div>
</div>


