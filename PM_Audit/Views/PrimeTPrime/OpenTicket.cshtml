                            <option>Prime</option>
                            <option>T-Prime</option>
                            <option>Standby</option>
                            <option>CP Only</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-inline form-group mylabelstyle">
                        <label>Issue<span class="asterick"> *</span></label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
